<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/buttonselected" >
    <ImageView
        android:id="@+id/row_img_playlists_icon"
        android:src="@drawable/img_playlists_icon"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:scaleType="center"
        android:background="@drawable/buttonselected" />

    <TextView
        android:id="@+id/row_textPlaylist"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:textColor="@color/text"
        android:background="@drawable/buttonselected"
        android:gravity="fill_vertical"
        android:textSize="20dp"
		android:paddingLeft="7dp"
        android:layout_toRightOf="@+id/row_img_playlists_icon"
        android:layout_alignTop="@+id/row_img_playlists_icon" />
    
</RelativeLayout>