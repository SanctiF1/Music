<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="6dp"
    android:paddingBottom="6dp" >
    
    <ImageView
        android:id="@+id/row_imageinPlaylists"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/row_imageinPlaylists"
        android:layout_alignTop="@+id/row_imageinPlaylists"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp" >
    <TextView 
        android:id="@+id/row_songname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="20dp"
        android:text="Name"
        android:layout_weight=".70"
        android:singleLine="true"
        android:lines="1" />
    
    <TextView
        android:id="@+id/row_Duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/artistinlistsonginplaylist"
        android:text="Duration"
        android:gravity="right"
        android:textSize="17dp"
        android:layout_weight=".30"
        android:singleLine="true"
        android:lines="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/row_imageinPlaylists"
        android:layout_alignBottom="@+id/row_imageinPlaylists"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp" >
    
        <TextView
	        android:id="@+id/row_artist"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/artistinlistsonginplaylist"
	        android:text="Unknown Artist"
	        android:textSize="17dp"
	        android:layout_weight=".60"
	        android:singleLine="true"
        	android:lines="1" />
	    <TextView
	        android:id="@+id/row_Album"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/artistinlistsonginplaylist"
	        android:textSize="17dp"
	        android:text="Unknown Album"
	        android:gravity="right"
	        android:layout_weight=".40"
	        android:singleLine="true"
        	android:lines="1" />
    </LinearLayout>

</RelativeLayout>