<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/history_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/background_of_title"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/img_allsong_icon" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-25dp"
            android:src="@drawable/allsongs" />
    </LinearLayout>
	    
			    <EditText
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:drawableLeft="@drawable/ic_action_search"
			        android:paddingLeft="10dp"
			        android:hint="Search ....."
			        android:id="@+id/inputSearch"
			        android:textColor="#336666" />
	    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
        <ListView android:id="@+id/ListSongView"
			 android:layout_width="wrap_content" 
			 android:layout_height="300dp"
			 android:layout_weight="1">
	 </ListView>   
    </LinearLayout>
</LinearLayout>
